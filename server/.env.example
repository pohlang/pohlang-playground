# Example .env file for PohLang Runner
# Copy this to .env and update with your values

# Server port
PORT=5173

# Path to PohLang binary
# Local development (Windows)
# POHLANG_BIN=C:\Users\habib\POHLANG\PohLang\runtime\target\debug\pohlang.exe

# Local development (Linux/Mac)
# POHLANG_BIN=/path/to/pohlang

# Production (Docker/VPS)
POHLANG_BIN=/usr/local/bin/pohlang

# Environment
NODE_ENV=production

# Allowed origins (optional, for stricter CORS)
# ALLOWED_ORIGINS=https://pohlang-playground.pages.dev,https://your-custom-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Execution limits
EXEC_TIMEOUT_MS=10000
MAX_CODE_SIZE_BYTES=1048576
